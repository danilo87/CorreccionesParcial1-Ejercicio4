import java.util.Scanner;


public class PreguntaVoF {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner text = new Scanner (System.in);
		int Puntaje=0;
		System.out.println("Quiz: Cultura General");
		
		System.out.print("Pregunta 1: Cuales son los colores primarios?");
	    int color;
		String colores;
	    colores=text.next();
	    
	   if(colores == ("rojo, azul, amarrillo"))
	   {
	       Puntaje=Puntaje+10;
	       System.out.print("Correcto: Eres todo un Artista!");
	   }
	   else
	   {
	    System.out.print("Incorrecto: Son Rojo, Azul, Amarrillo");
	   }

						
		System.out.println("Pregunta 3: Cuantos planetas tiene el Sistema Solar?");
	    int planeta;
		planeta=text.nextInt();
	    if(planeta==8)
	    {
	        Puntaje=+10;
	        System.out.println("Correcto: Tienes el conocimiento para ser Astronauta!");
	    }
	    else
	    {
	    	System.out.println("Incorrecto: el Sistema Solar tiene 8 planetas!");
	    }
	}

}
